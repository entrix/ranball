<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- the application context definition for the springapp DispatcherServlet -->
  
    <bean id="terrainManager" class="ranball.service.SimpleTerrainManager">
		<property name="terrain" ref="terrain"/>
    </bean>

  	<import resource="beans.xml"/>
  
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>
    
    <bean name="/target.htm" class="ranball.web.TargetController">
       	<property name="terrainManager" ref="terrainManager" />
    </bean>
    
    <bean name="/start.htm" class="ranball.web.StartController"/>
  
    <bean name="/print.htm" class="ranball.web.PrintController">
    	<property name="terrainManager" ref="terrainManager" />
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>        
    </bean>
    
</beans>
